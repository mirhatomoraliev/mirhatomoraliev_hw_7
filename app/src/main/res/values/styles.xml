<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">30sp</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>
    <style name="Gray.Button" parent="Base.Button">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Dark.Gray.Button" parent="Base.Button">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Orange.Button." parent="Base.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Base.ButtonForSecondLay" parent="Widget.MaterialComponents.Button">
        <item name="icon">@drawable/ic_arrow</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/gray</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="Base.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>